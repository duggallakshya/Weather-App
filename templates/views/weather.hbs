<!DOCTYPE html>
<html lang="en">
<head>
    {{>headerLinks}}
</head>
<body>
    <!-- Header -->
    {{>navbar}}
    <!-- Home Page Content -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
               <div class="main_content">
                   <form class="temp_form">
                       <input type="text" id="cityName" placeholder="Enter your city" autocomplete="off">
                       <input type="submit" value="Search" id="submitBtn">
                   </form>
               </div>
               
               <div class="tempInformation">
                   <div class="top_layer">
                       <p id="day">Tuesday</p>
                       <p id="today_date">4 Feb</p>
                   </div>
                   <div class="main_layer">
                       <p id="city_name">Get Output Here</p>
                       <div class="middle_layer data_hide">
                           <p id="temp"><span>0</span> <sup>o</sup>C</p>
                           <p id="temp_status">sun</p>
                       </div>
                   </div>

               </div>
            </div>
        </div>
    </div>
    <!-- Footer -->
   {{>footer}}
   <script src="js/main.js">

   </script>

</body>
</html>